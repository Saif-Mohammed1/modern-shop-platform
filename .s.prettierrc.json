{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": false,
  "arrowParens": "always",
  "jsxSingleQuote": false,
  "bracketSameLine": false,
  "proseWrap": "always",
  "endOfLine": "lf",
  "quoteProps": "consistent",
  "overrides": [
    {
      "files": ["*.{json,jsonc}"],
      "options": {
        "printWidth": 80,
        "singleQuote": false
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always",
        "tabWidth": 4
      }
    }
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": ["^react(-native)?$", "^@?\\w", "^@/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
